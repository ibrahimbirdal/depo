// Placeholder görsel
const placeholderImg = "https://images.unsplash.com/photo-1509042239860-f550ce710b93?auto=format&fit=crop&w=600&q=80";

let cart = JSON.parse(localStorage.getItem('coffeetime_cart')) || [];

// --- FONKSİYONLAR ---

function displayMenu(list){
    const container = document.getElementById("menu-grid");
    container.innerHTML = list.map(c => `
        <div class="card">
            <img src="${c.gorsel}" alt="${c.isim}" onerror="this.src='${c.gorsel_yedek || placeholderImg}'">
            <div class="card-body">
                <div>
                    <div class="card-header">
                        <h3 style="font-size:1.1rem;">${c.isim}</h3>
                        <span class="badge-country">${c.ulke}</span>
                    </div>
                    <p style="font-size:0.9rem;color:#666;line-height:1.4;">${c.ozellik}</p>
                </div>
                <div class="price-row">
                    <span class="price">${c.fiyat} TL</span>
                    <button class="add-btn" onclick="addToCart(${c.id})">
                        <i class="fas fa-plus"></i> Ekle
                    </button>
                </div>
            </div>
        </div>
    `).join("");
}

function filterCoffee(cat, btn){
    document.querySelectorAll(".filter-btn").forEach(b => b.classList.remove("active"));
    btn.classList.add("active");
    if(cat === 'Tümü') displayMenu(coffees);
    else displayMenu(coffees.filter(c => c.kategori === cat));
}

function addToCart(id){
    const product = coffees.find(c => c.id === id);
    const existing = cart.find(item => item.id === id);
    if(existing) existing.qty++;
    else cart.push({...product, qty: 1});
    
    saveAndUpdate();
    showNotification(`"${product.isim}" sepete eklendi.`);
}

function removeFromCart(id){
    cart = cart.filter(item => item.id !== id);
    saveAndUpdate();
    renderCartItems(); 
}

function saveAndUpdate(){
    localStorage.setItem('coffeetime_cart', JSON.stringify(cart));
    const count = cart.reduce((sum, item) => sum + item.qty, 0);
    document.getElementById("cart-count").innerText = `(${count})`;
}

function handleContactSubmit(e) {
    e.preventDefault();
    const btn = e.target.querySelector('button');
    const originalText = btn.innerHTML;
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Gönderiliyor...';
    
    setTimeout(() => {
        showNotification("Mesajınız başarıyla iletildi!");
        e.target.reset();
        btn.disabled = false;
        btn.innerHTML = originalText;
    }, 1500);
}

function openCart(){
    renderCartItems();
    document.getElementById("cart-modal").style.display = "flex";
    document.body.classList.add("no-scroll");
}

function renderCartItems(){
    const container = document.getElementById("cart-items-container");
    const totalElem = document.getElementById("cart-total-price");
    
    if(cart.length === 0){
        container.innerHTML = `<div style="text-align:center; padding:30px; color:#999;"><i class="fas fa-mug-hot" style="font-size:30px; margin-bottom:10px; display:block;"></i>Sepetiniz boş.</div>`;
        totalElem.innerText = "0";
        return;
    }

    let total = 0;
    container.innerHTML = cart.map(item => {
        const itemTotal = item.fiyat * item.qty;
        total += itemTotal;
        return `
        <div class="cart-item">
            <div>
                <div style="font-weight:600;">${item.isim}</div>
                <div style="font-size:0.85rem; color:#888;">${item.qty} adet x ${item.fiyat} TL</div>
            </div>
            <div style="display:flex; align-items:center; gap:10px;">
                <span style="font-weight:bold;">${itemTotal} TL</span>
                <i class="fas fa-trash-alt" style="color:var(--accent); cursor:pointer;" onclick="removeFromCart(${item.id})"></i>
            </div>
        </div>`;
    }).join("");
    totalElem.innerText = total;
}

function openCheckout(){
    if(cart.length === 0) return alert("Sepetiniz boş!");
    closeModal('cart-modal');
    document.getElementById("checkout-modal").style.display = "flex";
}

// --- GÜNCELLENMİŞ ÖDEME VE İNDİRME FONKSİYONLARI ---

function downloadJSON(data, filename) {
    const jsonStr = JSON.stringify(data, null, 2);
    const blob = new Blob([jsonStr], { type: "application/json" });
    const url = URL.createObjectURL(blob);
    const a = document.createElement("a");
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();
    document.body.removeChild(a);
    URL.revokeObjectURL(url);
}

function processPayment(e){
    e.preventDefault();
    const btn = e.target.querySelector('button');
    const address = document.getElementById("cust-address").value;
    
    btn.disabled = true;
    btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Sipariş Oluşturuluyor...';
    
    const totalAmount = cart.reduce((sum, item) => sum + (item.fiyat * item.qty), 0);
    const orderDate = new Date();
    const orderId = "SIP-" + Date.now();

    const orderData = {
        siparis_no: orderId,
        tarih: orderDate.toLocaleString("tr-TR"),
        musteri: {
            adres: address
        },
        odeme_toplam: totalAmount + " TL",
        urunler: cart.map(item => ({
            urun_id: item.id,
            urun_adi: item.isim,
            adet: item.qty,
            birim_fiyat: item.fiyat,
            toplam_fiyat: item.fiyat * item.qty
        }))
    };

    setTimeout(() => {
        downloadJSON(orderData, `Siparis_${orderId}.json`);

        cart = [];
        saveAndUpdate();
        closeModal('checkout-modal');
        showNotification("Sipariş dosyası indirildi ve onaylandı!");
        
        btn.disabled = false;
        btn.innerHTML = 'Ödemeyi Onayla';
        e.target.reset();
    }, 2000);
}

function closeModal(id){
    document.getElementById(id).style.display = "none";
    document.body.classList.remove("no-scroll");
}

function showNotification(msg){
    const notif = document.getElementById("notification");
    notif.innerHTML = `<i class="fas fa-check-circle"></i> ${msg}`;
    notif.classList.add("show");
    setTimeout(() => notif.classList.remove("show"), 3000);
}

// Kapanış events
window.onclick = function(e) {
    if (e.target.classList.contains('modal-overlay')) closeModal(e.target.id);
}

// Başlangıç
window.onload = () => {
    displayMenu(coffees);
    saveAndUpdate();
};
</script>

</body>
</html>
